# Heat Pump Stats Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# General Settings
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone for timestamps (e.g., 'Europe/Berlin', 'UTC')
TZ=UTC

# Collector mode: 'production' for real data, 'mock' for testing
COLLECTOR_MODE=production

# =============================================================================
# Viessmann Heat Pump
# =============================================================================

# Viessmann API username (your email address)
VIESSMANN_USER=

# Viessmann API password
VIESSMANN_PASSWORD=

# Viessmann OAuth client ID (from developer portal)
VIESSMANN_CLIENT_ID=

# Interval in seconds between heat pump data polls (minimum 60)
VIESSMANN_POLL_INTERVAL=300

# Interval in seconds between configuration polls (minimum 300)
VIESSMANN_CONFIG_INTERVAL=18000

# =============================================================================
# Shelly Power Meter
# =============================================================================

# Hostname or IP address of the Shelly power meter
SHELLY_HOST=

# Shelly device password (if authentication is enabled)
SHELLY_PASSWORD=

# Interval in seconds between power meter polls (minimum 1)
SHELLY_POLL_INTERVAL=10

# =============================================================================
# InfluxDB
# =============================================================================

# InfluxDB server URL
INFLUXDB_URL=http://influxdb:8086

# InfluxDB authentication token
INFLUXDB_TOKEN=

# InfluxDB organization name
INFLUXDB_ORG=home

# InfluxDB bucket for raw metrics data
INFLUXDB_BUCKET_RAW=heatpump_raw

# InfluxDB bucket for downsampled metrics data
INFLUXDB_BUCKET_DOWNSAMPLED=heatpump_downsampled

# =============================================================================
# InfluxDB Admin (for initial setup)
# =============================================================================

# InfluxDB admin username
INFLUXDB_ADMIN_USER=admin

# InfluxDB admin password (minimum 8 characters)
INFLUXDB_ADMIN_PASSWORD=change_me_please_min_8_chars

# =============================================================================
# Heat Pump Metrics
# =============================================================================

# Heat pump rated power in kW
HEAT_PUMP_RATED_POWER=16.0

# Estimated flow rate in liters per hour
ESTIMATED_FLOW_RATE=1000.0

# =============================================================================
# Persistence
# =============================================================================

# Path to SQLite database file for persistent storage
SQLITE_DB_PATH=heatpump_stats.db

# =============================================================================
# API Security
# =============================================================================

# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
SECRET_KEY=

# Algorithm for JWT token signing
ALGORITHM=HS256

# JWT access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API authentication username
API_USERNAME=admin

# API authentication password (CHANGE IN PRODUCTION!)
API_PASSWORD=
