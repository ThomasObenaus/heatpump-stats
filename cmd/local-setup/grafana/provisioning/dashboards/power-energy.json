          "query": "import \"date\"\n\n// 1. Calculate the end of that month automatically\nraw_month = \"${month}\" + \"-01T00:00:00Z\"\nv_month = time(v: \"${raw_month}\")\nv_month_end = date.add(d: 1mo, to: v_month)\n\nfrom(bucket: \"${bucket}\")\n  |> range(start: v_month, stop: v_month_end)\n  |> filter(fn: (r) => r[\"_measurement\"] == \"power_meter\")\n  |> filter(fn: (r) => r[\"_field\"] == \"power_watts\")\n  // 3. Aggregate by 1 week intervals\n  |> aggregateWindow(\n      every: 1w, \n      fn: (column, tables=<-) => tables |> integral(unit: 1h),\n      timeSrc: \"_start\"\n  )\n  |> map(fn: (r) => ({ \n    r with \n    _time_label: \"${date.monthDay(t: r._time)}.${date.month(t: r._time)}.\",\n    _value: r._value / 1000.0 \n  }))\n  |> set(key: \"_field\", value: \"Weekly Consumed Energy (in kWh)\")\n  |> keep(columns: [\"_time_label\", \"_value\"])\n  |> rename(columns: {_value: \"Weekly Consumed Energy (kWh)\"})\n  |> rename(columns: {_time_label: \"First Day of the Week\"})",
