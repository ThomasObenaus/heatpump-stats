    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Fetch Data",
            "type": "debugpy",
            "request": "launch",
            "module": "heatpump_stats.cli",
            "args": [
                "fetch"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Monitor Data",
            "type": "debugpy",
            "request": "launch",
            "module": "heatpump_stats.cli",
            "args": [
                "monitor",
                "--interval",
                "1",
                "--duration",
                "1"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Show Stats",
            "type": "debugpy",
            "request": "launch",
            "module": "heatpump_stats.cli",
            "args": [
                "stats",
                "--days",
                "7"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}